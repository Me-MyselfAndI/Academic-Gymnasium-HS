#include <iostream>
using namespace std;


void eratosphene(long long k, bool isPrime[]){
    for(int i = 1; i <= k*2; ++i) isPrime[i] = 1;
    for(int i = 2; i < k; ++i){
        if(isPrime[i])
            for(int j = i*2; j <= k*2; j+=i){
                isPrime[j] = 0;
            }
    }
}

int main() {
    int n;
    cin >> n;

    bool *isPrime = new bool[n];
    eratosphene(n, isPrime);
    for(int i = 2; i <= n; ++i){
        cout << i << " " << isPrime[i] << endl;
    }
    return 0;
}
